#include<stdio.h>
#include<conio.h>
int main()
{
    int a,b,c,e=1;
    printf("Enter number of rows: ");
    scanf("%d",&a);//scanning number of rows
    for(b=1;b<=a;b++)
    {
        for(c=1;c<=b;c++)
        {
            printf("%d\t",e);//prints numbers with a tab distance
            e++;//it increments in int e
        }
        printf("\n");//it prints next row in new line
    }

    getch();
}
